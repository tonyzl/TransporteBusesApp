@page
@model TransporteBusesApp.Frontend.Pages.FormEstacionesModel
@{
}
<div class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="top-text header-text">
            <h6>Estaciones</h6>
            <h2>Formulario Creacion de Estaciones</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="text-center mt-4">
    <form method="POST">
        <div class="form-group row">
            <label for="nombre" class="col-form-label col-2 font-weight-bold" placeholder="ingrese un Nombre">Nombre: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nombre" name="nombre" required placeholder="Nombre">
            </div>
        </div>
        <div class="form-group row">
            <label for="direccion" class="col-form-label col-2 font-weight-bold">Direccion:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="direccion" name="direccion" required placeholder="Direccion">
            </div>
        </div>
        <div class="form-group row">
            <label for="coord_x" class="col-form-label col-2 font-weight-bold">Coordenada X:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="coord_x" name="coord_x" required placeholder="Coordenada X">
            </div>
        </div>
        <div class="form-group row">
            <label for="coord_y" class="col-form-label col-2 font-weight-bold">Coordenada Y:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="coord_y" name="coord_y" required placeholder="Coordenada Y">
            </div>
        </div>
        <div class="form-group row">
            <label for="tipo" class="col-form-label col-2 font-weight-bold">Tipo:</label>
            <div class="col-sm-10">
                <select name="tipo" id="tipo" class="form-control">
                    <option value="">Seleccione el Tipo</option>
                    <option value="Principal">Principal</option>
                    <option value="Segundaria">Segundaria</option>
                </select>
            </div>
        </div>
        <hr>
        <button type="submit" class="btn btn-success">Crear Estacion</button>
    </form>
</div>