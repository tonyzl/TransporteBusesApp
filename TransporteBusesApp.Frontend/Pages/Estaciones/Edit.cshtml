@page
@model TransporteBusesApp.Frontend.Pages.EditEstacionModel
@{
    var estacion = Model.Estacion;
}


<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="top-text header-text">
                <h6>Actualizar el Registro</h6>
                 <!--<h2>Registra el Bus</h2>-->
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_NotificationsPartial"></partial> @* se agrega la vista parcial de la notificacion *@

<div class="text-center">
<form method="POST">
    <input type="number" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@estacion.id" readonly>
    <label for="nombre" class = "form-label">Nombre:</label>
    <input type="text" class="form-control" id="nombre" name="nombre" required placeholder="Nombre" asp-for="@estacion.nombre">
    <label for="direccion" class="form-label">Direccion:</label>
    <input type="text" class="form-control" id="direccion" name="direccion" required placeholder="Direccion" asp-for="@estacion.direccion">
    <label for="coord_x" class="form-label">Coordenada X:</label>
    <input type="number" class="form-control" id="coord_x" name="coord_x" required placeholder="Coordenada X" asp-for="@estacion.coord_x">
    <label for="coord_y" class="form-label">Coordenada Y:</label>
    <input type="number" class="form-control" id="coord_y" name="coord_y" required placeholder="Coordenada Y" asp-for="@estacion.coord_y">
    <label for="tipo">Tipo:</label>
    <select name="tipo" id="tipo" class="form-control" required asp-for="@estacion.tipo">
        <option value="">Seleccione el Tipo</option>
        <option value="Principal">Principal</option>
        <option value="Segundaria">Segundaria</option>
    </select>
  <hr>
  <button type="submit" class="btn btn-success">Actualizar</button>
</form>
</div>