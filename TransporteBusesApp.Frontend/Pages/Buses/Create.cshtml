@page
@model TransporteBusesApp.Frontend.Pages.FormBusesModel
@{
}
<div class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="top-text header-text">
            <h6>Buses</h6>
            <h2>Formulario Creacion de Rutas</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="text-center">
     <div class="col-sm-9 m-2">
            <h3 class="text-info">Crear Bus</h3>
        </div>
    <form method="POST" >
       <div class="form-group row">
        <label asp-for="bus.id" class="form-label col-sm-2">Id:</label>
        <input class="form-control col-sm-10" asp-for="bus.id" required placeholder="Id">
        </div>
        <div class="form-group row">
        <label asp-for="bus.marca" class="form-label col-sm-2">Marca:</label>
        <input class="form-control col-sm-10" asp-for="bus.marca" required placeholder="Marca">
        </div>
        <div class="form-group row">
        <label asp-for="bus.modelo" class="form-label col-sm-2">Modelo:</label>
        <input class="form-control col-sm-10" asp-for="bus.modelo" required placeholder="Modelo">
        </div>
        <div class="form-group row">
        <label asp-for="bus.kilometraje" class="form-label col-sm-2 ">Kilometraje:</label>
        <input class="form-control col-sm-10" asp-for="bus.kilometraje" required placeholder="Kilometraje">
        </div>
        <div class="form-group row">
        <label asp-for="bus.nro_asientos" class="form-label col-sm-2">No. de Asientos:</label>
        <input class="form-control col-sm-10" asp-for="bus.nro_asientos" required placeholder="No de Asientos">
        </div>
        <div class="form-group row">
        <label asp-for="bus.placa" class="form-label col-sm-2">Placa:</label>
        <input class="form-control col-sm-10" asp-for="bus.placa" required placeholder="Placa">
        </div>
        <div class="col-2">
        <button type="submit" class="btn btn-success ">Crear Bus</button>
        </div>
    </form>
</div>