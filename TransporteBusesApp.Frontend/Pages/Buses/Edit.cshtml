@page
@model TransporteBusesApp.Frontend.Pages.EditBusModel
@{
    var bus = Model.Bus;
}
 
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="top-text header-text">
                <h6>Actualizar el Registro</h6>
                 <!--<h2>Registra el Bus</h2>-->
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
<form method="POST">
  <label for="id" class="form-label">id:</label>
  <input type="number" class="form-control" id="id" name="id" placeholder="id" asp-for="@bus.id" readonly>
  <label for="Marca" class="form-label">Marca:</label>
  <input type="text" class="form-control" id="marca" name="marca" placeholder="Marca" asp-for="@bus.marca">
  <label for="Modelo" class="form-label">Modelo:</label>
  <input type="number" class="form-control" id="modelo" name="modelo" placeholder="Modelo" asp-for="@bus.modelo">
  <label for="Kilometraje" class="form-label">Kilometraje:</label>
  <input type="number" class="form-control" id="kilometraje" name="kilometraje" placeholder="Kilometraje" asp-for="@bus.kilometraje">
  <label for="nro_asientos" class="form-label">Número de asientos:</label>
  <input type="number" class="form-control" id="nro_asientos" name="nro_asientos" placeholder="Número de asientos" asp-for="@bus.nro_asientos">
  <label for="Placa" class="form-label">Placa:</label>
  <input type="text" class="form-control" id="Placa" name="placa" placeholder="placa" asp-for="@bus.placa">
  <hr>
  <button type="submit" class="btn btn-success">Actualizar</button>
</form>
</div>
<div>
    <partial name="_NotificationsPartial"></partial> @* se agrega la vista parcial de la notificacion *@
</div>
 @section Scripts {
  @{ 
     await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
 }   