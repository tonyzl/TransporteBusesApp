@page
@model TransporteBusesApp.Frontend.Pages.ListBusModel
@{
}
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h1 class="text-info form-control">Lista de Buses</h1>
    </div>
    <div class="col-3">
        <a asp-page="/Buses/Create" class="btn btn-outline-info">Crear Bus</a>
    </div>
    
    
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col"><label asp-for="Buses.FirstOrDefault().id"></label></th>
            <th scope="col"><label asp-for="Buses.FirstOrDefault().marca"></label></th>
            <th scope="col"><label asp-for="Buses.FirstOrDefault().modelo"></label></th>
            <th scope="col"><label asp-for="Buses.FirstOrDefault().kilometraje"></label></th>
            <th scope="col"><label asp-for="Buses.FirstOrDefault().nro_asientos"></label></th>
            <th scope="col"><label asp-for="Buses.FirstOrDefault().placa"></label></th>
            <th scope="col"><label>Acciones</label></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Buses.Count() > 0)
        {
            @foreach(var item in Model.Buses)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(m =>item.id)</th>
                    <td>@Html.DisplayFor(m =>item.marca)</td>
                    <td>@Html.DisplayFor(m =>item.modelo)</td>
                    <td>@Html.DisplayFor(m =>item.kilometraje)</td>
                    <td>@Html.DisplayFor(m =>item.nro_asientos)</td>
                    <td>@Html.DisplayFor(m =>item.placa)</td>
                    <td>
                        <a class="btn btn-success" asp-page="/Buses/Details" asp-route-busId="@item.id">Ver</a>
                        <a class="btn btn-info" asp-page="/Buses/Edit" asp-route-busId="@item.id">Editar</a>
                        <a class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
            
        }
        else
        {
            <tr>
                <td>
                    <p>No Buses disponibles</p>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>