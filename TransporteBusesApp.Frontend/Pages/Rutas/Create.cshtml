@page
@model TransporteBusesApp.Frontend.Pages.FormRutasModel
@using TransporteBusesApp.Dominio;


<div class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="top-text header-text">
            <h6>Rutas</h6>
            <h2>Formulario Creacion de Rutas</h2>
          </div>
        </div>
      </div>
    </div>
</div>
  
  
<div class="inner-content"> 
  <div class="row">
    <div class="col-lg-6 " >
      <div>
        <img width="100%" height="450px" src="/assets/images/buses.jpg" alt="">
      </div>
  </div>
  <div class="col-lg-6 align-self-center">
    <form id="contact" action="" method="POST" >
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                <select asp-for="ruta.origenid" asp-items="@Model.lst_origen" class="form-select form-select-lg form-control">
                  <option selected>seleccione las estacion de origen</option>
                </select>
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                <select asp-for="ruta.destinoid" asp-items="@Model.lst_destino" class="form-select form-select-lg form-control">
                <option selected>seleccione la estacion de destino</option>
                </select>
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                <input type="text" class="form-control" asp-for="ruta.tiempo_estimado" required placeholder="Tiempo Estimado en minutos">
                </fieldset>
            </div>
            <div class="col-lg-12">
                    <fieldset>
                    <button type="submit" class="btn btn-success">Crear Ruta</button>
                    </fieldset>
            </div> 
        </div>
      </form>
    </div> 
  </div>
  
</div> 

<div>
    <partial name="_NotificationsPartial"></partial> @* se agrega la vista parcial de la notificacion *@
</div>
 @section Scripts {
  @{ 
     await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
 }   