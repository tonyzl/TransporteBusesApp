@page
@model TransporteBusesApp.Frontend.Pages.ListRutasModel;

@{
}
 
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h1 class="text-info form-control">Lista de Rutas</h1>
    </div>
    <div class="col-3">
        <a asp-page="/Rutas/Create" class="btn btn-outline-info">Crear Ruta</a>
    </div>
    
    
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col"><label asp-for="rutas.FirstOrDefault().id"></label></th>
            <th scope="col"><label asp-for="rutas.FirstOrDefault().origen"></label></th>
            <th scope="col"><label asp-for="rutas.FirstOrDefault().destino"></label></th>
            <th scope="col"><label asp-for="rutas.FirstOrDefault().tiempo_estimado"></label>
            <th scope="col"><label>Acciones</label></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.rutas.Count() > 0)
        {
            @foreach(var item in Model.rutas)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(m =>item.id)</th>
                    <td>@Html.DisplayFor(m =>item.origen.nombre)</td>
                    <td>@Html.DisplayFor(m =>item.destino.nombre)</td>
                    <td>@Html.DisplayFor(m =>item.tiempo_estimado)</td>
                    <td>
                        <a class="btn btn-success" asp-page="/Rutas/Details" asp-route-id="@item.id">Ver</a>
                        <a class="btn btn-info" asp-page="/Rutas/Edit" asp-route-id="@item.id">Editar</a>
                        <a class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
            
        }
        else
        {
            <tr>
                <td>
                    <p>No Hay Rutas disponibles</p>
                </td>
            </tr>
        }
        
        
</table>
    </tbody>